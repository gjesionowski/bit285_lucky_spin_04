@model LuckySpin.Models.Spin
@inject LuckySpin.Models.TextTransformService Transform
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lucky Spin</title>
</head>
<body>
    <button onclick='history.go(0)'>Spin</button>
    <div>@Model.A</div><div>@Model.B</div><div>@Model.C</div>
    <h1> Lucky @Transform.numberToText(Model.Luck) </h1>
    <h2 style="display:@Model.Display">Congratulations, @ViewBag.pName</h2>       @*This was added to congratulate the player on a Lucky Spin*@
    <h2 style="display:@Model.Display">Your number was spun! You win!</h2>        @*The ViewBag property was created in the SpinnerController*@
    <img src="/Images/LuckySpinCoins.jpg"
         class="animated bounce"
         alt="Coins"
         style="display:@Model.Display" />
</body>
</html>